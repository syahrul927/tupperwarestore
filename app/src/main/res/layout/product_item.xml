<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="140dp"
        android:layout_marginHorizontal="5dp"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/cardview_product_item">


        <TextView
            android:id="@+id/titleItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/priceItem"
            android:text="Category"
            android:gravity="center"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="80dp"
            android:layout_marginVertical="5dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_unavailable_pict"
            app:layout_constraintBottom_toTopOf="@id/titleItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/priceItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Rp 150.000"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_add_btn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>